            <li><%= link_to "Propostas", proposals_path  %></li>
            <li><%= link_to "Dúvidas", "https://www.youtube.com/watch?v=5Ik7k4KuOek", target: :_blank  %></li>
            <li><%= link_to "Fale Conosco", "http://postcom.com.br/contato/", target: :_blank  %></li>
          </ul>
          <% if current_user %>
            <a><%= link_to 'Logout', destroy_user_session_path, class: 'btn btn-danger navbar-btn',:method => :delete%></a>
          <%end%>
        </div>
      </div>
    </div>
  </nav>

