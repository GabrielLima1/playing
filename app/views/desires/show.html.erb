<%- model_class = Desire -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @desire.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:action) %>:</strong></dt>
  <dd><%= @desire.action %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @desire.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @desire.user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:company_id) %>:</strong></dt>
  <dd><%= @desire.company.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:img1) %>:</strong></dt>
  <dd><% unless @desire.img1_url.nil? %><%= image_tag @desire.img1_url(:thumbnail)%><br /><% end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:img2) %>:</strong></dt>
  <dd><% unless @desire.img2_url.nil? %><%= image_tag @desire.img2_url(:thumbnail)%><br /><% end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:img3) %>:</strong></dt>
  <dd><% unless @desire.img3_url.nil? %><%= image_tag @desire.img3_url(:thumbnail)%><br /><% end %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              desires_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_desire_path(@desire), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              desire_path(@desire),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
