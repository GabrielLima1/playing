<%= simple_form_for @desire, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title, placeholder: 'Ex: Post Dia das Mães!', label: 'Titulo Postagem:'%>
  <%= f.input :action, collection: ["Divulgar Promoção","Divulgar Produto", "Divulgar Serviço","Utilizar para o Sistema Luqy","Institucional"], include_blank: false, label: 'Objetivo:'%>
  <%= f.input :description, maxlength: "120", placeholder: 'Breve descrição da arte que Deseja!', label: 'Descrição:' %>
  <%= f.association :company, include_blank: false, label: "Empresa:", collection: Company.where(user_id: current_user.id) %>
  <%= f.label 'Imagens de Referência:' %>
  <%= f.input :img1 %>
  <%= f.input :img2 %>
  <%= f.input :img3 %>
  <%= f.hidden_field :user_id, :value => current_user.id %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                desires_path, :class => 'btn btn-default' %>
<% end %>
