<%- model_class = Proposal -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<% if (@proposals.nil?) || (@proposals.empty?) %>
  <h3>Você não possuí nenhuma Proposta.</h3>
<% else %>
  <table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:message) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:notes) %></th>
      <th><%= model_class.human_attribute_name(:desire_id) %></th>
      <th><%= model_class.human_attribute_name(:img1) %></th>
      <th><%= model_class.human_attribute_name(:img2) %></th>
      <th><%= model_class.human_attribute_name(:img3) %></th>
      <!-- <th><%= model_class.human_attribute_name(:company_logo) %></th> -->
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @proposals.each do |proposal| %>
      <tr>
        <td><%= link_to proposal.id, proposal_path(proposal) %></td>
        <td><%= proposal.message %></td>
        <td><%= proposal.status %></td>
        <td><%= proposal.notes %></td>
        <td><%= proposal.desire.title %></td>
        <td><%= image_tag(proposal.img1_url(:thumbnail), :alt => "Imagem") %></td>
        <td><%= image_tag(proposal.img2_url(:thumbnail), :alt => "Imagem") %></td>
        <td><%= image_tag(proposal.img3_url(:thumbnail), :alt => "Imagem") %></td>
        <!-- <td><%= image_tag(proposal.desire.company.logo_url(:thumbnail), :alt => "Logo") %></td> -->
        <td><%= proposal.user.name %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      proposal_path(proposal), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_proposal_path(proposal), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      proposal_path(proposal),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
