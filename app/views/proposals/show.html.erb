<%- model_class = Proposal -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:message) %>:</strong></dt>
  <dd><%= @proposal.message %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @proposal.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @proposal.notes %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desire_id) %>:</strong></dt>
  <dd><%= @proposal.desire_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:img1) %>:</strong></dt>
  <dd><%= @proposal.img1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:img2) %>:</strong></dt>
  <dd><%= @proposal.img2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:img3) %>:</strong></dt>
  <dd><%= @proposal.img3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @proposal.user_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              proposals_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_proposal_path(@proposal), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              proposal_path(@proposal),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
